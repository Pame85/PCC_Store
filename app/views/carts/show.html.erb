<h1>Cart</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td>
          <%= form_for(line_item, url: line_item_path(line_item), method: :patch) do |f| %>
            <%= f.number_field :quantity, min: 1 %>
            <%= f.submit 'Update' %>
          <% end %>
        </td>
        <td><%= line_item.price %></td>
        <td>
          <%= link_to 'Delete', line_item_path(line_item), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
   <%= link_to 'Back', root_path %>

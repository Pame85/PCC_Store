<!DOCTYPE html>
<html>
<head>
  <title>Welcome to My App</title>
</head>
<body>
  <div class="container">
    <h1>Welcome to My App</h1>

    <% if user_signed_in? %>
      <p>Welcome, <%= current_user.email %>! <br>
        <%= form_tag destroy_user_session_path, method: :delete do %></p>
          <%= submit_tag 'Sign Out' %>
        <% end %>  
    <% else %>
      <p><%= link_to 'Sign up', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %></p>
    <% end %>

    <div class="card-container">
      <% @products.each do |product| %>
        <div class="card">
          <div class="image-container">
            <%= image_tag(product.image, class: "card-img-top", style: "width:100%" ) if product.image.attached? %>
          </div>
          <div class="card-body">
            <h1 class="card-title"><%= product.name %></h1>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text lead"><%= number_to_currency(product.price) %></p>
            <div><%= button_to 'Add to cart', shopping_cart_path(product_id: product), method: 'POST', class: 'btn btn-primary' %></div>
          </div>
        </div>
      <% end %>
    </div>

</body>
</html>

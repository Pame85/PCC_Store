<h1><%= @product.name %></h1>
<% if @product.image.attached? %>
    <%= image_tag @product.image(resize_to_limit: [650, 400]) %>
<% else %>
    <p>No image available</p>
<% end %>

<h4><%= @product.name %></h4>
    <p><%= @product.description %></p>
    <p class="lead"><%= number_to_currency(@product.price) %></p>

    <div><%= button_to 'Add to cart', shopping_cart_path(product_id: @product), method: 'POST' %></div>
    <br>
    <hr>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= button_to 'Delete', product_path(@product), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' }, class: 'btn btn-danger btn-lg w-100', remote: true %>
    <br>
    <%= link_to 'Back', root_path, class: 'text-underline' %>


